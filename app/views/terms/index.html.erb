<h1>Listing terms</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.description %></td>
        <td><%= term.user.email if term.user %></td>
        <td><%= link_to 'Show', term %></td>
        <% if term.user == current_user %>
          <td><%= link_to 'Edit', edit_term_path(term) %></td>
          <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Term', new_term_path %>
<% end %>