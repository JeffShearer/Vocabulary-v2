<%= form_for(@term) do |f| %>
  <% if @term.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@term.errors.count, "error") %> prohibited this term from being saved:</h2>

      <ul>
      <% @term.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :Term%><br>
    <%= f.text_field :term_name, class: "form-control"  %>
  </div>
  <div class="form-group"> <!-- This isn't working right now, but sort of a demo of how select fields work with boostrap forms and ruby-->
