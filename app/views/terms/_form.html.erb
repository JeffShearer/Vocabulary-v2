    <%= f.select :term_part_of_speech, options_for_select([['Noun', 1], ['Verb', 2]]), {},class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :description%><br>
    <%= f.text_field :description, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>

<% end %>
